<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_harvest_configuration_farmer_form" model="ir.ui.view">
        <field name="name">harvest.configuration.farmer.form</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="true"/>
                        </h1>
                    </div>
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group>
                        <field name="farmer_photo" class="oe_avatar" widget="image"/>
                    </group>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="gender"/>
                        </group>

                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="isold"/>


                        </group>

                        <notebook>
                            <page string="Vehicles">
                                <field name="vehicle_ids" />
                            </page>
                        </notebook>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_harvest_configuration_farmer_kanban" model="ir.ui.view">
        <field name="name">harvest.configuration.farmer.kanban</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="address"/>
                <field name="id"/>
                <field name="farmer_photo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image d-none d-md-block" t-attf-style="background-image: url('#{kanban_image('harvesthub.farmers', 'farmer_photo', record.id.raw_value)}');height: 10vh;"></div>
                            <div class="oe_kanban_details">
                                <p>
                                    <field name="name"/>
                                </p>
                                <p>
                                    <field name="address"/>
                                </p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_configuration_harvest_farmer_search" model="ir.ui.view">
        <field name="name">harvest.configuration.farmer.search</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>

                <filter name="is Old?" string="is Old?" domain="[('isold','=','True')]"/>

                <group expand="0" string="Group By">
                    <filter string="gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_harvest_configuration_farmer" model="ir.actions.act_window">
        <field name="name">Farmers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">harvesthub.farmers</field>
        <field name="view_mode">kanban,form</field>
    </record>
</odoo>
