<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="harvest_crop_process_view_tree" model="ir.ui.view">
    <field name="name">harvest.crop.process.tree</field>
    <field name="model">harvest.process</field>
    <field name="arch" type="xml">
      <tree editable="bottom" decoration-success="category=='Post-Harvest'">
        <field name="name"/>
        <field name="description"/>
        <field name="category"/>

        <button name="action_done" type="object" icon="fa-check" title="done" context="{'default_category': category}" invisible="crop_id.state == 'Sold'"/>
        <field name="crop_id" optional='1' invisible='1'/>
      </tree>
    </field>
  </record>

  <record id="action_harvest_crop_process" model="ir.actions.act_window">
    <field name="name">Crops Processes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">harvest.process</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
