<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_harvest_farmer_form" model="ir.ui.view">
        <field name="name">harvest.farmers.form</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="true"/>
                        </h1>
                    </div> -->
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="address"/>
                            <field name="taxId"/>
                        </group>

                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>

                        <notebook>
                            <page string="Description">
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <!--                  
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" options="{'post_refresh':'recipients'}"/>
                </div> -->
            </form>
        </field>
    </record>

    <record id="view_harvest_farmer_kanban" model="ir.ui.view">
        <field name="name">harvest.farmers.kanban</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <p>
                                    <field name="name"/>
                                </p>
                                <p>
                                    <field name="address"/>
                                </p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <record id="view_harvest_farmer_search" model="ir.ui.view">
        <field name="name">harvest.farmer.search</field>
        <field name="model">harvesthub.farmers</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>

                <filter name="is Old?" string="is Old?" domain="[('isold','=','True')]"/>
            </search>
        </field>
    </record>

    <record id="action_harvest_farmer" model="ir.actions.act_window">
        <field name="name">Farmers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">harvesthub.farmers</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <menuitem id="menu_harvest_farmer" name="Configure Farmer" parent="menu_harvest_configuration" action="action_harvest_farmer" sequence="9" />
</odoo>